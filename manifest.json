{
	"manifest_version": 2,
	"name": "Search Tap",
	"version": "1.0.0",
	"icons": {
		"48": "assets/images/logo.png"
	},
	"description": "Chrome Extension - Context Selector :)",
	"browser_action": {
		"default_title": "Select Tap",
		"default_popup": "popup/popup.html"
	},
	"background": {
		"scripts": [
			"popup/vendor/jquery-1.7.2_min.js",
			"popup/vendor/encoder.js",
			"background/background.js"
		]
	},
	"commands": {
		"copy": {
			"description": "Copy",
			"suggested_key": {
				"default": "Alt+C"
			}
		},
		"paste": {
			"description": "Paste",
			"suggested_key": {
				"default": "Alt+V"
			}
		}
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"content/content.js"
			],
			"css": [
				"assets/css/bar.css"
			]
		}
	],
	"permissions": [
		"storage",
		"tabs",
		"http://*/*",
		"https://*/*",
		"clipboardRead",
		"clipboardWrite",
		"notifications"
	]
}