{
	"manifest_version": 2,
	"name": "Select Tap",
	"version": "1.0.0",
	"icons": {
		"48": "logo.png"
	},
	"description": "Chrome Extension - Context Selector :)",
	"browser_action": {
		"default_title": "Select Tap",
		"default_popup": "index.html"
	  },
	"background": {
		"scripts": [
			"./scripts/background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"./scripts/content.js"
			]
		}
	],
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}