{
	"manifest_version": 2,
	"name": "Select Tap",
	"version": "1.0.0",
	"icons": {
		"48": "img/logo.png"
	},
	"description": "Chrome Extension - Context Selector :)",
	"browser_action": {
		"default_title": "Select Tap",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": [ "vendor/jquery-1.7.2_min.js", "vendor/encoder.js", "background.js" ]
	},
	"commands": {
		"copy": {
		   "description": "Copy",
		   "suggested_key": {
			  "default": "Alt+C"
		   }
		},
		"paste": {
		   "description": "Paste",
		   "suggested_key": {
			  "default": "Alt+V"
		   }
		}
	 },
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"./scripts/content.js"
			],
			"css": [
				"./scripts/bar.css"
			]
		}
	],
	"permissions": [ "tabs", "http://*/*", "https://*/*", "clipboardRead", "clipboardWrite", "notifications" ],
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}